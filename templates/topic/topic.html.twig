{% extends 'base.html.twig' %}

{% block title %}{{ topic.nameTopic }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <h2>{{ topic.nameTopic }}</h2><br>
  <span>asked : {{ topic.dateTopic|date("F jS \\a\\t g:ia") }}</span><hr>
  <p>All messages:</p>
        
        {% for message in messages %}
            <ul>
                <li><strong>{{ message.text}}</strong>
                <span>{{ message.idUser.nameUser }} answered : {{ message.dateMessage|date("F jS \\a\\t G:i") }}</span></li>
            </ul>
        {% endfor %}
</div>
{% endblock %}
