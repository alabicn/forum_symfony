<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('css/img/favicon.ico') }}" type="image/x-icon" />
        <link rel="shortcut icon" href="{{ asset('css/img/favicon.ico') }}" type="image/x-icon" />
        <title>{% block title %}Forum{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        {% block stylesheets %}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/materialize.min.css') }}"  media="screen,projection"/>
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <header>
            <nav>
                <div class="nav-wrapper">
                <a href="{{ path('home') }}" class="brand-logo"><img src="{{ asset('css/img/speak.png') }}" alt="logo.png" width="35px" style="margin-left: 10px;"/></a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="sass.html">Sass</a></li>
                    <li><a href="badges.html">Components</a></li>
                    <li><a href="collapsible.html">JavaScript</a></li>
                </ul>
                </div>
            </nav>
        </header>
        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div>
                <a  href="{{ path('app_register') }}">Register</a>
            </div>
        {% endif %}
        {% endblock %}
        {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
